<div class="view bg-white">
    <div class="layout layout--col gap--space-between">
        <div class="columns">
            <div class="column">
                <!-- Results Section -->
                <div class="section">
                    <span class="title title--small">Recent Results</span>
                    <table class="table">
                        <thead>
                            <tr>
                                <th><span class="title title--small">Date</span></th>
                                <th><span class="title title--small">Home</span></th>
                                <th><span class="title title--small">Score</span></th>
                                <th><span class="title title--small">Away</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% assign counter = 0 %}
                            {% assign all_matches = matches | sort: "date" | reverse %}

                            {% for match in all_matches %}
                            {% if counter < 3 and match.score.ft and match.score.ft[0] != nil %} {% if
                                match.team1=="Manchester United FC" or match.team2=="Manchester United FC" %} {% assign
                                match_date=match.date | date: "%-d %b" %} <tr>
                                <td><span class="title title--small">{{ match_date }}</span></td>
                                <td>
                                    <div class="flex gap gap--small" style="align-items: center">
                                        {% if match.score.ft[0] > match.score.ft[1] %}
                                        <span class="label label--outline">{{ match.team1 }}</span>
                                        {% else %}
                                        <span class="title title--small">{{ match.team1 }}</span>
                                        {% endif %}
                                    </div>
                                </td>
                                <td><span class="title title--small">{{ match.score.ft[0] }} - {{ match.score.ft[1]
                                        }}</span></td>
                                <td>
                                    <div class="flex gap gap--small" style="align-items: center">
                                        {% if match.score.ft[1] > match.score.ft[0] %}
                                        <span class="label label--outline">{{ match.team2 }}</span>
                                        {% else %}
                                        <span class="title title--small">{{ match.team2 }}</span>
                                        {% endif %}
                                    </div>
                                </td>
                                </tr>
                                {% assign counter = counter | plus: 1 %}
                                {% endif %}
                                {% endif %}
                                {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="section-divider"></div>

                <!-- Fixtures Section -->
                <div class="section">
                    <span class="title title--small">Upcoming Fixtures</span>
                    <table class="table">
                        <thead>
                            <tr>
                                <th><span class="title title--small">Date</span></th>
                                <th><span class="title title--small">Time</span></th>
                                <th><span class="title title--small">Home</span></th>
                                <th><span class="title title--small">Away</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% assign counter = 0 %}
                            {% assign upcoming_matches = matches | sort: "date" %}

                            {% for match in upcoming_matches %}
                            {% if counter < 3 and match.score.ft==nil %} {% if match.team1=="Manchester United FC" or
                                match.team2=="Manchester United FC" %} {% assign match_date=match.date | date: "%-d %b"
                                %} <tr>
                                <td><span class="title title--small">{{ match_date }}</span></td>
                                <td><span class="title title--small">{{ match.time }}</span></td>
                                <td><span class="title title--small">{{ match.team1 }}</span></td>
                                <td><span class="title title--small">{{ match.team2 }}</span></td>
                                </tr>
                                {% assign counter = counter | plus: 1 %}
                                {% endif %}
                                {% endif %}
                                {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="title_bar">
        <img class="image" src="https://upload.wikimedia.org/wikipedia/en/f/f2/Premier_League_Logo.svg" />
        <span class="title">Manchester United FC</span>
        <span class="instance">Results & Fixtures</span>
    </div>
</div>